<%- include('../partials/header_admin.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        ol,
        ul {
            padding-left: 0rem !important;
        }
    </style>

    <body>
        <div class="">
            <%- include('../partials/admin_nav.ejs') %>
                <!--main-->
                <div class="main">
                    <div class="topbar" style="padding-top: 30px;">
                        <div class="toggle">
                            <i class="fal fa-bars"></i>
                        </div>
                        <!--search-->
                        <h3>Change Password Meter Reader: <% if(reader_id !="undefined" && reader_id) {%><%= reader_id %><% } %>
                        </h3>
                        <!--User Image-->
                        <div class="user">

                        </div>
                    </div>
                    <!--Details list-->
                    <div class="details2">
                        <div class="recentDetails2">
                            <div class="container mt-3 col-md-10">
                                <h5 class="pt-3">Change Password</h5>
                                <form action="/admin/update_pw_meter_reader" method="post">
                                    <input type="hidden" name="reader_id" value="<% if(reader_id != "undefined" &&reader_id) {%><%= reader_id %><% } %>">
                                            <div class="mb-3 form-floating">
                                                <input type="password" class="form-control" placeholder="Password"
                                                    name="password">
                                                <label for="floatingInput">Password</label>
                                            </div>
                                            <div class="mb-3 form-floating">
                                                <input type="password" class="form-control"
                                                    placeholder="Confirm Password" name="conf_password">
                                                <label for="floatingInput">Confirm Password</label>
                                            </div>
                                            <% if (typeof mWarning !="undefined" && mWarning) { %>
                                                <div class="alert alert-danger" role="alert">
                                                    <%= mWarning %>
                                                </div>
                                                <% } %>
                                                    <% if (typeof mSuccess !="undefined" && mSuccess) { %>
                                                        <div class="alert alert-success" role="alert">
                                                            <%= mSuccess %>
                                                        </div>
                                                        <% } %>
                                                            <div class="col-6 mx-auto d-grid mt-5 pb-4">
                                                                <button type="submit" class="btn btn-primary">Change
                                                                    Password</button>
                                                            </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
        </div>

        <script>
            //MenuToggle
            let toggle = document.querySelector('.toggle');
            let navigation = document.querySelector(' .navigation');
            let main = document.querySelector('.main');

            toggle.onclick = function () {
                navigation.classList.toggle('active');
                main.classList.toggle('active');
            }
            //add hovered class in selected liste item 

            let list = document.querySelectorAll('.navigation li');
            function activeLink() {
                list.forEach((item) =>
                    item.classList.remove('hovered'));
                this.classList.add('hovered');
            }
            list.forEach((item) =>
                item.addEventListener('mouseover', activeLink));
        </script>
    </body>

    </html>