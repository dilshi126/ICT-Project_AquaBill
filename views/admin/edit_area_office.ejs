    <body>
        <div class="">
            <%- include('../partials/admin_nav.ejs') %>
                <!--main-->
                <div class="main">
                    <div class="topbar" style="padding-top: 30px;">
                        <div class="toggle">
                            <i class="fal fa-bars"></i>
                        </div>
                        <!--search-->
                        <h3>Edit Area Office</h3>
                        <!--User Image-->
                        <div class="user">
                            
                        </div>
                    </div>
                    <!--Details list-->
                    <div class="details2">
                        <div class="recentDetails2">
                            <div class="container mt-3 col-md-10">
                                
                                <form action="/admin/update_area_office" method="POST">
                                    <div class="mb-3 form-floating">
                                        <input type="text" class="form-control" placeholder="Area ID" name="area_id" readonly value="<% if(Data[0].area_id != "undefined" && Data[0].area_id) {%><%= Data[0].area_id %><% } %>">
                                        <label for="floatingInput">Area ID</label>
                                      </div>
                                      <div class="mb-3 form-floating">
                                        <input type="text" class="form-control" placeholder="Area Name" name="area_name" required value="<% if(Data[0].area_name != "undefined" && Data[0].area_name) {%><%= Data[0].area_name %><% } %>">
                                        <label for="floatingInput">Area Name</label>
                                      </div>
                                      
                                      <div class="mb-3 form-floating">
                                        <textarea class="form-control" placeholder="Address" name="address" style="height: 100px" required ><% if(Data[0].address != "undefined" && Data[0].address) {%><%= Data[0].address %><% } %></textarea>
                                        <label for="floatingInput">Address</label>
                                      </div>
                                      <div class="mb-3 form-floating">
                                        <input type="tel" class="form-control" placeholder="Telephone No" name="telephone_no" required value="<% if(Data[0].telephone_no != "undefined" && Data[0].telephone_no) {%><%= Data[0].telephone_no %><% } %>">
                                        <label for="floatingInput">Telephone No</label>
                                      </div>
                        
                                      <div class="form-floating mb-3">
                                        <select class="form-control" name="district" placeholder="Select District...">
                                       
